<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/white"
    tools:context=".MyPost"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/captionTv2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="bottom|left"
        android:textColor="#6C6C6E"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userIdTextView2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/likeTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="TextView"
        android:textColor="#6C6C6E"
        app:layout_constraintBottom_toBottomOf="@+id/likeButtonHeart2"
        app:layout_constraintEnd_toStartOf="@+id/likeButtonHeart2" />

    <TextView
        android:id="@+id/tagTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#6C6C6E"
        app:layout_constraintBottom_toBottomOf="@+id/likeTextView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />


    <TextView
        android:id="@+id/contentTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:text="TextView"
        android:textColor="#6C6C6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tagTextView2"
        app:layout_constraintTop_toBottomOf="@+id/tagTextView2" />

    <TextView
        android:id="@+id/postIdTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="#6C6C6E"
        app:layout_constraintStart_toStartOf="@+id/userIdTextView2"
        app:layout_constraintTop_toBottomOf="@+id/captionTv2" />

    <TextView
        android:id="@+id/userIdTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:textColor="#1591A6"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/postIdTextView2" />



    <Button
        android:id="@+id/DeleteButton2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="30dp"
        android:text="Delete"
        android:backgroundTint="#525455"
        app:layout_constraintEnd_toStartOf="@+id/BackButton2"
        app:layout_constraintBottom_toBottomOf="parent"/>
<!--        app:layout_constraintLeft_toRightOf="@id/LikeButton2"-->
<!--        app:layout_constraintTop_toBottomOf="@id/ContentTextView2" />-->

    <Button
        android:id="@+id/BackButton2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#525455"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/likeButtonHeart2" />


    <com.like.LikeButton
        android:id="@+id/likeButtonHeart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:anim_scale_factor="2"
        app:circle_end_color="#12A518"
        app:circle_start_color="#F1DD31"
        app:dots_primary_color="#0E77CC"
        app:dots_secondary_color="#FF1A4F"
        app:icon_size="40dp"
        app:icon_type="heart"
        app:is_enabled="true"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:liked="false"
        tools:ignore="MissingConstraints" />

    <!-- heart like button -->

</androidx.constraintlayout.widget.ConstraintLayout>